// Set text on select to arbitrary color
.v-select__slot
  .v-select__selections
    letter-spacing: 1.8px
    font-size 1.3rem
    text-transform: capitalize
    @extends .alegreya-sc--regular

  .theme--light
    color: inherit !important
    @extends .alegreya--bold

.v-list
  .theme--light
    @extends .v-select__slot .v-select__selections

.select--cinema
  .v-select__slot
    .v-select__selections
      color: inherit !important
      letter-spacing: 3.5px
      font-size: 1.8rem
      text-transform: capitalize
      @extends .alegreya-sc--light

    .theme--light
      color: inherit !important
      @extends .alegreya--bold

  .v-list
    .theme--light
      @extends .v-select__slot .v-select__selections
